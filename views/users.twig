{% extends 'layouts/main.twig' %}

{% block title %} Пользователи {% endblock %}

{% block content %}
    <div class="users__block">
        <h1>Список пользователей</h1>
        <table cellpadding="0" cellspacing="0" style="box-sizing: border-box">
            <tbody>
            <tr>
                <th style="text-align: center;"><strong>ID</strong><br/></th>
                <th style="text-align: center;"><strong>Имя пользователя</strong></th>
                <th style="text-align: center;"><strong>Пароль</strong></th>
                <th style="text-align: center;"><strong>Имя</strong></th>
                <th style="text-align: center;"><strong>Группа</strong></th>
            </tr>
            {% for user in users %}
                <tr>
                    <td><a href="/user/view/?id={{ user.ID }}">{{ user.ID }}</a></td>
                    <td><a href="/user/view/?id={{ user.ID }}">{{ user.sLogin }}</a></td>
                    <td>{{ user.sPassword }}</td>
                    <td>{{ user.sName }}</td>
                    <td>{{ user.sGroup }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block content %}
    {% for user in users %}
        <h1><a href="?c=user&a=one&id={{ user.ID }}">{{ user.sLogin }}</a></h1>
    {% endfor %}
{% endblock %}
